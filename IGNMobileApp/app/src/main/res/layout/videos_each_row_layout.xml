<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/videos_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Time"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/videos_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/videos_time"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Time"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/videos_images_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/videos_heading"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:id="@+id/videos_content_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/youtube_play_img"
            android:layout_width="90dp"
            android:layout_height="60dp"

            android:layout_centerInParent="true"

            android:background="@drawable/youtube"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/videos_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/videos_images_layout"
        android:text="Time"
        android:textColor="@color/text_color"
        android:textAlignment="viewStart"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/articles_read_comments_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videos_description"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch"
            android:gravity="start"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_slow_motion_video_black_24dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:drawablePadding="5dp"
            android:textColor="@color/text_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/videos_comments_count_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:layout_toLeftOf="@+id/videos_comments_count_value"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:drawableLeft="@drawable/ic_comment_black_24dp"
                android:drawablePadding="5dp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/videos_comments_count_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/articles_comments_text_color"
                android:layout_alignParentRight="true"
                android:text="Count"
                android:paddingRight="5dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginTop="7dp"
        android:layout_below="@id/articles_read_comments_layout"
        android:background="#808080"/>

</RelativeLayout>
